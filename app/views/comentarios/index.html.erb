<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Comentarios en "<%= @publicacion.titulo %>"</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Autor</th>
        <th>Fecha</th>
        <th>Contenido</th>
        <th>Reputación</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @publicacion.comentarios.each do |comentario| %>
        <tr>
          <td> No hay comentario.user.nombre</td>
          <td><%= comentario.fecha %></td>
          <td><%= comentario.contenido %></td>
          <td><%= comentario.ptje_rep %></td>
          <td>
            <%= link_to "Me gusta",like_comentario_path(comentario),  method: :put, :class => 'btn btn-success btn-sm'%>
            <%= comentario.get_upvotes.size %>
            <%= link_to "Me enoja", unlike_comentario_path(comentario),  method: :put, :class => 'btn btn-danger btn-sm'%>
            <%= comentario.get_downvotes.size %>
          </td>
          <td>
            <div class="btn-group" role="group" aria-label="Pais options">
              <button type="button" class="btn btn-secondary">
                <%= link_to 'Editar',
                edit_pai_ciudad_publicacion_comentario_path(
                comentario.publicacion.ciudad.pai_id,
                comentario.publicacion.ciudad_id, comentario.publicacion_id,
                comentario)%>
              </button>
              <button type="button" class="btn btn-secondary">
                <%= link_to 'Eliminar', pai_ciudad_publicacion_comentario_path(
                comentario.publicacion.ciudad.pai_id,
                comentario.publicacion.ciudad_id, comentario.publicacion_id,
                comentario), method: :delete, data: { confirm: '¿Desea eliminar
                este comentario?' } %></button>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <div class="row">
    <%= form_tag(pai_ciudads_path, method: :get) do %>
      <%= text_field_tag :term, params[:term] %>
      <%= submit_tag 'Buscar' %>
    <% end %>
  </div>

  <div class="row">
    <%= link_to 'Añadir Comentario',
    new_pai_ciudad_publicacion_comentario_path %>
    <%= link_to 'Volver', pai_ciudad_publicacions_path %>
  </div>
</div>
