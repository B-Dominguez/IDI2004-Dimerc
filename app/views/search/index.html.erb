<p id="notice"><%= notice %></p>


<% if @publicacions.length == 0 && @pais.length == 0 && @ciudads.length == 0 && @itinerarios.length == 0 && @comentarios.length == 0%>
  <h3> No matches found </h3>
<% else %>
  <% if @publicacions.length > 0 %>
    <h3>Publicacion</h3>
    <table class = "table table-hover jumbotron">
    <thead>
    <tr>
      <th class="header_small">Titulo</th>
      <th colspan="3"></th>
    </tr>
    </thead>

      <tbody>
        <% @publicacions.each do |publicacion| %>
          <tr>
            <td><%= link_to publicacion.titulo, publicacion %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

  <% if @pais.length > 0 %>
    <h3>Pais</h3>
    <table class = "table table-hover jumbotron">
    <thead>
    <tr>
      <th class="header_small">Nombre</th>
      <th colspan="3"></th>
    </tr>
    </thead>

      <tbody>
        <% @pais.each do |pai| %>
          <tr>
            <td><%= link_to pai.nombre, pai %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

  <% if @ciudads.length > 0 %>
    <h3>Ciudad</h3>
    <table class = "table table-hover jumbotron">
    <thead>
    <tr>
      <th class="header_small">Nombre</th>
      <th colspan="3"></th>
    </tr>
    </thead>

      <tbody>
        <% @ciudads.each do |ciudad| %>
          <tr>
            <td><%= link_to ciudad.nombre, ciudad %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

    <% if @itinerarios.length > 0 %>
    <h3>Itinerario</h3>
    <table class = "table table-hover jumbotron">
    <thead>
    <tr>
      <th class="header_small">Nombre</th>
      <th colspan="3"></th>
    </tr>
    </thead>

      <tbody>
        <% @itinerarios.each do |itinerario| %>
          <tr>
            <td><%= link_to itinerario.nombre, itinerario %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

    <% if @comentarios.length > 0 %>
    <h3>Comentario</h3>
    <table class = "table table-hover jumbotron">
    <thead>
    <tr>
      <th class="header_small">Contenido</th>
      <th colspan="3"></th>
    </tr>
    </thead>

      <tbody>
        <% @comentarios.each do |comentario| %>
          <tr>
            <td><%= link_to comentario.contenido, comentario %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>


<% end %>
