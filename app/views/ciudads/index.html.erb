<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Ciudades en <%=@pai.nombre%> </h1>
  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Ubicación</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pai.ciudads.each do |ciudad| %>
        <tr>
          <td><%= ciudad.nombre %></td>
          <td><%= ciudad.descripcion %></td>
          <td><%= ciudad.ubicacion %></td>
          <td>
            <div class="btn-group" role="group" aria-label="Pais options">
              <button type="button" class="btn btn-secondary">
                <%= link_to 'Ver más', pai_ciudad_path(ciudad.pai_id, ciudad)
                %></button>
              <button type="button" class="btn btn-secondary">
                <%= link_to 'Editar', edit_pai_ciudad_path(ciudad.pai_id,
                ciudad.id) %></button>
              <button type="button" class="btn btn-secondary">
                <%= link_to 'Eliminar', pai_ciudad_path(ciudad.pai_id, ciudad),
                  method: :delete,
                  data: { confirm: '¿Desea eliminar esta ciudad?' } %></button>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <div class="row">
    <%= form_tag(pai_ciudads_path, method: :get) do %>
      <%= text_field_tag :term, params[:term] %>
      <%= submit_tag 'Buscar' %>
    <% end %>
  </div>

  <div class="row">
    <%= link_to 'Crear Ciudad', new_pai_ciudad_path %>
    <%= link_to 'Volver', pais_path %>
  </div>
</div>
