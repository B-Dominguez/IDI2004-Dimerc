<div class="container">
  <br><br><br>
  <div class="row">
    <div class="col-sm-4">

    </div>
    <div class="col-lg-4 centered" style="border:1px solid #e83338ff;">
      <div class="row" style="background-color:#e83338ff;">
        <h2 class="text-center" style="color:white;">Registrarme</h2>
      </div>
      <br>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <br>
        <div class="field">
          <%= f.label :contraseÃ±a %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        <br>
        <div class="field">
          <%= f.label :confirmar_contraseÃ±a %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <br>
        <div class="field">
          <%= f.label :nombre %><br />
          <%= f.text_field :name %>
        </div>
        <br>
        <div class="field">
          <%= f.label :apellido %><br />
          <%= f.text_field :last_name %>
        </div>
        <br>
        <div class="field">
          <%= f.label :anexo %><br />
          <%= f.text_field :anexo %>
        </div>
        <br>
        <div class="field">
          <%= f.label :cargo %><br />
          <%= f.select(:cargo, [["e-commerce", "e-commerce"], ["dropship",
          "dropship"], ["fulfillment", "fulfillment"]]) %>
        </div>
        <br>
        <div class="field">
          <%= f.label :area_conocimiento %><br />
          <%= f.select(:area, [["e-commerce", "e-commerce"], ["dropship",
          "dropship"], ["fulfillment", "fulfillment"]]) %>
        </div>
        <br>
        <div class="field">
          <%= f.label :ubicacion %><br />
          <%= f.text_field :location %>
        </div>
        <br>
        <div class="field">
          <%= f.label :image %>
          <%= f.file_field :image %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "Registrarme" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      <br><br><br>
    </div>
  </div>
</div>
