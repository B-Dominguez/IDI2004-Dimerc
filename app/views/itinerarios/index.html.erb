<p id="notice"><%= notice %></p>
<div class="container">
    <div class="row">
      <h1>Itinerarios</h1>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Duración</th>
            <th>Lugares</th>
            <th>Actividades</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @itinerarios.each do |itinerario| %>
            <tr>
              <td><%= itinerario.nombre %></td>
              <td><%= itinerario.descripcion %></td>
              <td><%= itinerario.duracion %></td>
              <td><%= itinerario.lugares %></td>
              <td><%= itinerario.actividades %></td>
              <td>
                <div class="btn-group" role="group" aria-label="Pais options">
                  <button type="button" class="btn btn-secondary">
                    <%= link_to 'Ver más', itinerario %></button>
                  <button type="button" class="btn btn-secondary">
                    <%= link_to 'Editar', edit_itinerario_path(itinerario) %>
                  </button>
                  <button type="button" class="btn btn-secondary">
                    <%= link_to 'Eliminar', itinerario, method: :delete, data:
                    { confirm: '¿Desea eliminar este itinerario?' } %></button>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  <div class="row">
    <%= form_tag(itinerarios_path, method: :get) do %>
      <%= text_field_tag :term, params[:term] %>
      <%= submit_tag 'Buscar' %>
    <% end %>
  </div>
  <div class="row">
    <%= link_to 'Crear Itinerario', new_itinerario_path %>
    <%= link_to 'Volver', welcome_index_path %>
  </div>
</div>
